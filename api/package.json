{
  "name": "bayrou-api",
  "version": "1.0.0",
  "description": "Azure Functions API for Bayrou voting app",
  "main": "index.js",
  "scripts": {
    "start": "func start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/functions/**/*.js",
      "!src/functions/**/function.json"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/?(*.)+(spec|test).js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "dependencies": {
    "@azure/cosmos": "^4.5.1",
    "@azure/functions": "^4.0.0"
  },
  "devDependencies": {
    "azure-functions-core-tools": "^4.x",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0"
  }
}
